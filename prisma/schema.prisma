generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  displayName String?

  // Yandex OAuth
  yandexId    String? @unique
  yandexLogin String?
  avatarUrl   String?
  email       String?

  // ✅ Персональный QR исполнителя (генерируется при регистрации)
  // nullable + unique: в Postgres это ок (много NULL допускается)
  performerQrToken String? @unique

  sessions          Session[]
  bookings          Booking[]
  reputationEvents  ReputationEvent[]
  feedbacks         Feedback[]

  // ✅ Слоты/смены, которые создал пользователь (старший смены)
  createdSlots Slot[] @relation("SlotCreatedBy")

  // ✅ Подтверждения смен (кто подтвердил)
  startConfirmedBookings Booking[] @relation("BookingStartConfirmedBy")
  endConfirmedBookings   Booking[] @relation("BookingEndConfirmedBy")

  // ✅ Геопинги исполнителя при показе QR
  geoPings UserGeoPing[]
}

model Session {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  tokenHash String @unique
  expiresAt DateTime

  @@index([userId])
  @@index([expiresAt])
}

model Object {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  name    String
  city    String
  address String?

  // ✅ UI поля (web/client)
  type    String?
  logoUrl String?

  // ✅ Координаты объекта (для проверки 200м)
  lat Float?
  lng Float?

  hasBus     Boolean @default(false)
  isPremium  Boolean @default(false)
  hasFood    Boolean @default(false)
  isFavorite Boolean @default(false)

  photos ObjectPhoto[]

  slots     Slot[]
  feedbacks Feedback[]
}

model ObjectPhoto {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  objectId String
  object   Object @relation(fields: [objectId], references: [id], onDelete: Cascade)

  url      String
  position Int

  @@index([objectId])
  @@unique([objectId, position])
}

model Slot {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  objectId String
  object   Object @relation(fields: [objectId], references: [id])

  // ✅ Старший смены = тот, кто создал слот
  createdById String?
  createdBy   User?   @relation("SlotCreatedBy", fields: [createdById], references: [id])

  date      DateTime

  // ✅ ПЛАНОВОЕ время смены (не путать с Booking.startsAt/endsAt)
  startTime DateTime
  endTime   DateTime

  title String
  pay   Int
  type  TaskType
  hot   Boolean  @default(false)
  published Boolean @default(false)

  bookings  Booking[]
  feedbacks Feedback[]

  @@index([createdById])
}

model Booking {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  slotId String
  slot   Slot   @relation(fields: [slotId], references: [id])

  status BookingStatus

  // ✅ ФАКТИЧЕСКОЕ прибытие/убытие исполнителя (не путать с Slot.startTime/endTime)
  startsAt DateTime?
  endsAt   DateTime?

  // ✅ Подтверждение начала смены (сканирует создатель слота)
  startConfirmedAt DateTime?
  startConfirmedById String?
  startConfirmedBy   User? @relation("BookingStartConfirmedBy", fields: [startConfirmedById], references: [id])
  startLat Float?
  startLng Float?

  // ✅ Подтверждение окончания смены (понадобится дальше)
  endConfirmedAt DateTime?
  endConfirmedById String?
  endConfirmedBy   User? @relation("BookingEndConfirmedBy", fields: [endConfirmedById], references: [id])
  endLat Float?
  endLng Float?

  @@index([userId, status])
  @@index([slotId])
  @@index([startConfirmedById])
  @@index([endConfirmedById])
}

// ✅ Геопинги исполнителя при показе QR (lat/lng берём с устройства исполнителя)
model UserGeoPing {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  lat Float
  lng Float

  @@index([userId, createdAt])
}

model Feedback {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  slotId String
  slot   Slot   @relation(fields: [slotId], references: [id])

  objectId String
  object   Object @relation(fields: [objectId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  rating  Int
  comment String?
}

model OAuthState {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  provider String
  state    String   @unique
  expiresAt DateTime

  @@index([provider])
  @@index([expiresAt])
}

model ReputationEvent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  type   ReputationEventType
  value  Int
  reason String?
}

enum TaskType {
  driver
  picker
  loader
  cook
  waiter
  cleaner
  other
}

enum BookingStatus {
  none
  booked
  cancelled
  completed
  checkin_requested

  // ✅ дополнительно под подтверждение начала/конца
  started
  ended
}

enum ReputationEventType {
  completed_shift
  late_cancel
  no_show
  late
  performance_high
  performance_low
}

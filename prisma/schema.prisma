generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  displayName String?

  // ✅ Yandex OAuth identity
  yandexId    String? @unique
  yandexLogin String?
  avatarUrl   String?
  email       String?

  // auth sessions
  sessions Session[]

  bookings         Booking[]
  reputationEvents ReputationEvent[]
  feedbacks        Feedback[]
}

model Session {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  // хранить только хэш токена (не сырой токен)
  tokenHash String @unique

  // когда сессия истекает
  expiresAt DateTime

  @@index([userId])
  @@index([expiresAt])
}

model Object {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  name    String
  city    String
  address String?

  // ✅ UI поля (web/client)
  type    String?
  logoUrl String?

  // ✅ фото объекта (2–3), порядок через position
  photos ObjectPhoto[]

  slots     Slot[]
  feedbacks Feedback[]
}

model ObjectPhoto {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  objectId String
  object   Object @relation(fields: [objectId], references: [id], onDelete: Cascade)

  url      String
  position Int

  @@index([objectId])
  @@unique([objectId, position])
}

model Slot {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  objectId String
  object   Object @relation(fields: [objectId], references: [id])

  date      DateTime
  startTime DateTime
  endTime   DateTime

  title String
  pay   Int
  type  TaskType
  hot   Boolean  @default(false)

  bookings  Booking[]
  feedbacks Feedback[]
}

model Booking {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  slotId String
  slot   Slot   @relation(fields: [slotId], references: [id])

  status BookingStatus

  @@index([userId, status])
  @@index([slotId])
}

model Feedback {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  slotId String
  slot   Slot   @relation(fields: [slotId], references: [id])

  objectId String
  object   Object @relation(fields: [objectId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  rating  Int
  comment String?
}

model OAuthState {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  provider String
  state    String   @unique
  expiresAt DateTime

  @@index([provider])
  @@index([expiresAt])
}

model ReputationEvent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  type   ReputationEventType
  value  Int
  reason String?
}

enum TaskType {
  driver
  picker
  loader
  cook
  waiter
  cleaner
  other
}

enum BookingStatus {
  none
  booked
  cancelled
  completed
}

enum ReputationEventType {
  completed_shift
  late_cancel
  no_show
  late
  performance_high
  performance_low
}
